@page
@model IndexModel
@{
    ViewData["Title"] = "Карта Башкортостана";
}

<h2>Карта Республики Башкортостан</h2>

<div id="map" style="width: 100%; height: 600px; position: relative;"></div>
<div id="info"
     style="position: absolute; background: rgba(255,255,255,0.9);
            padding: 5px; border-radius: 4px; border: 1px solid #333;
            display: none; pointer-events: none; z-index: 1000;">
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/ol/ol.css">
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/ol@v9.0.0/dist/ol.js"></script>
    <script type="module" src="/js/map.js"></script>
}